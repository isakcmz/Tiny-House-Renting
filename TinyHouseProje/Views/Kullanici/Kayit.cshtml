@model TinyHouseProje.Models.Kullanici
@{
    Layout = null;
    ViewBag.Title = "Kayıt Ol";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Kayıt Ol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #acb6e5, #74ebd5);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .form-wrapper {
            background-color: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 450px;
        }

            .form-wrapper h2 {
                text-align: center;
                margin-bottom: 25px;
                font-weight: bold;
                color: #333;
            }

        .form-footer {
            text-align: center;
            margin-top: 20px;
        }

            .form-footer a {
                text-decoration: none;
                color: #0d6efd;
            }

                .form-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="form-wrapper">
        <h2>Kullanıcı Kayıt Formu</h2>

        @using (Html.BeginForm())
        {
            <div class="mb-3">
                @Html.LabelFor(m => m.Ad, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Soyad, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Eposta, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Eposta, new { @class = "form-control", type = "email" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Sifre, new { @class = "form-label" })
                @Html.PasswordFor(m => m.Sifre, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.Label("Rol ID (1=Admin, 2=Ev Sahibi, 3=Kiracı)", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.RolID, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-success w-100">Kayıt Ol</button>
        }

        @if (ViewBag.Mesaj != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.Mesaj</div>
        }

        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Hata</div>
        }

        <div class="form-footer">
            <p>Zaten hesabınız var mı? @Html.ActionLink("Giriş yap", "Giris", "Kullanici")</p>
        </div>
    </div>
</body>
</html>

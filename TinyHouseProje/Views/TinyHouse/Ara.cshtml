@model List<TinyHouseProje.Models.TinyHouse>

@{
    ViewBag.Title = "Tiny House Ara";
}

<h2>Uygun Tiny House İlanları</h2>



@if (ViewBag.PopulerEvler != null && ((List<Tuple<string, string, decimal, int>>)ViewBag.PopulerEvler).Count > 0)
{
    <h3 class="mt-3 mb-3 text-success"><i class="fas fa-star"></i> Popüler Tiny House'lar</h3>
    <div class="row mb-4">
        @foreach (var ev in (List<Tuple<string, string, decimal, int>>)ViewBag.PopulerEvler)
        {
            <div class="col-md-4">
                <div class="card shadow-sm mb-3">
                    @if (!string.IsNullOrEmpty(ev.Item2))
                    {
                        <img src="@Url.Content(ev.Item2)" class="card-img-top" style="height: 180px; object-fit: cover;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@ev.Item1</h5>
                        <p class="card-text text-warning">⭐ @ev.Item3.ToString("0.0") puan</p>
                        <a href="@Url.Action("Detay", "TinyHouse", new { id = ev.Item4 })" class="btn btn-outline-primary btn-sm">Detay</a>
                    </div>
                </div>
            </div>
        }
    </div>
}




<!-- 🔍 Filtreleme -->
<form method="get" class="row mb-4">
    <div class="col-md-3">
        <label>Konum</label>
        @Html.DropDownList("konum", (SelectList)ViewBag.Konumlar, "Tümü", new { @class = "form-control" })
    </div>
    <div class="col-md-2">
        <label>Min Fiyat</label>
        <input type="number" name="minFiyat" class="form-control" placeholder="₺" />
    </div>
    <div class="col-md-2">
        <label>Max Fiyat</label>
        <input type="number" name="maxFiyat" class="form-control" placeholder="₺" />
    </div>
    <div class="col-md-2">
        <label>Başlangıç</label>
        <input type="date" name="baslangic" class="form-control" />
    </div>
    <div class="col-md-2">
        <label>Bitiş</label>
        <input type="date" name="bitis" class="form-control" />
    </div>
    <div class="col-md-1 align-self-end">
        <button type="submit" class="btn btn-primary w-100">Filtrele</button>
    </div>
</form>

@if (Model.Count == 0)
{
    <div class="alert alert-warning">Aramanıza uygun aktif ilan bulunamadı.</div>
}
else
{
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Konum</th>
                <th>Fiyat</th>
                <th>Uygunluk</th>
                <th>Görsel</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ilan in Model)
            {
                <tr>
                    <td>@ilan.Baslik</td>
                    <td>@ilan.Konum</td>
                    <td>@ilan.Fiyat.ToString("N2") ₺</td>
                    <td>
                        @(ilan.UygunlukBaslangic?.ToShortDateString() ?? "-")
                        -
                        @(ilan.UygunlukBitis?.ToShortDateString() ?? "-")
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(ilan.GorselYolu))
                        {
                            <img src="@Url.Content(ilan.GorselYolu)" style="width: 100px;" />
                        }
                        else
                        {
                            <span class="text-muted">Görsel yok</span>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Detay", "Detay", "TinyHouse", new { id = ilan.EvID }, new { @class = "btn btn-info btn-sm me-1" })
                        @Html.ActionLink("Rezervasyon Yap", "Rezervasyon", "Rezervasyon", new { id = ilan.EvID }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

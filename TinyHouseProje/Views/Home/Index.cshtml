@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string rol = ViewBag.RolID?.ToString();
}

<div class="hero-section text-center py-5 text-white" style="background: linear-gradient(to right, #667eea, #764ba2);">
    <div class="container">
        <h1 class="display-4 mb-3">🏡 Hoş geldiniz, @ViewBag.Kullanici!</h1>
        <p class="lead">Tiny House Rezervasyon sistemine hoş geldiniz. Size özel fırsatları keşfedin.</p>

        <div class="mt-4">
            @if (rol == "3")
            {
                <a href="@Url.Action("Ara", "TinyHouse")" class="btn btn-light btn-lg">Ev Ara</a>
            }
            else if (rol == "2")
            {
                <a href="@Url.Action("Listele", "TinyHouse")" class="btn btn-light btn-lg">İlanlarım</a>
            }
            else if (rol == "1")
            {
                <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-light btn-lg">Yönetim Paneli</a>
            }
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">Sistem Özellikleri</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="fas fa-calendar-check fa-3x text-primary mb-3"></i>
                    <h5>Kolay Rezervasyon</h5>
                    <p>Evleri hızlıca görüntüle, uygun tarihleri seç ve rezervasyonunu tamamla.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h5>Rol Bazlı Giriş</h5>
                    <p>Admin, ev sahibi ve kiracılar için özelleştirilmiş arayüz.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="fas fa-chart-line fa-3x text-warning mb-3"></i>
                    <h5>Detaylı Raporlama</h5>
                    <p>Gelir, kullanıcı, ilan ve rezervasyon verilerini grafiklerle takip et.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="bg-light py-5 mt-5 border-top">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <h3 class="text-primary">📌 Hakkımızda</h3>
                <p class="text-muted">
                    TinyHouse Rezervasyon Sistemi; ev sahiplerinin tiny house ilanlarını yayınlayabileceği,
                    kiracıların ise uygun tarih aralığına göre rezervasyon yapabileceği bir platformdur.
                    Admin paneli sayesinde sistem genel yönetimi yapılabilir.
                </p>
                <ul class="list-unstyled text-muted">
                    <li><i class="fas fa-check-circle text-success me-2"></i> Kolay rezervasyon ve ilan yönetimi</li>
                    <li><i class="fas fa-check-circle text-success me-2"></i> Kullanıcı dostu arayüz</li>
                    <li><i class="fas fa-check-circle text-success me-2"></i> Gelir & istatistik raporları</li>
                    <li><i class="fas fa-check-circle text-success me-2"></i> Rol bazlı erişim (Admin, Ev Sahibi, Kiracı)</li>
                </ul>
            </div>
            <div class="col-md-6 text-center">
                <img src="~/tinyhouselogo.jpg" alt="TinyHouse Logo" class="img-fluid" style="max-height: 250px;" />
            </div>
        </div>
    </div>
</div>

